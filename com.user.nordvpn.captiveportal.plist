<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.user.nordvpn.captiveportal</string>

    <key>ProgramArguments</key>
    <array>
        <string>/bin/bash</string>
        <string>REPO_DIR/nordvpn_captive_portal_handler.sh</string>
    </array>

    <key>RunAtLoad</key>
    <true/>

    <key>KeepAlive</key>
    <true/>

    <key>StandardOutPath</key>
    <string>HOME_DIR/Library/Logs/nordvpn_captive_portal_stdout.log</string>

    <key>StandardErrorPath</key>
    <string>HOME_DIR/Library/Logs/nordvpn_captive_portal_stderr.log</string>

    <key>EnvironmentVariables</key>
    <dict>
        <key>PATH</key>
        <string>/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin</string>
    </dict>
</dict>
</plist>
